<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="18dp"
    android:paddingTop="18dp">

    <com.store.hive.custom.FadeInNetworkImageView
        android:id="@+id/product_item_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        tools:src="@drawable/ic_launcher"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_toRightOf="@+id/product_item_img"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true">

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/product_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            tools:text="Product Item Name"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/product_item_price"
            app:typeface="roboto_condensed_regular"
            android:textSize="@dimen/sh_text_medium"/>
        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/product_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            tools:text="R50.00"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            app:typeface="roboto_condensed_regular"
            android:textSize="@dimen/sh_text_medium"/>

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/product_item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            tools:text="Product Item Description, bla bla bla"
            android:layout_alignParentBottom="true"
            app:typeface="roboto_condensed_light"
            android:textSize="@dimen/sh_text_small"/>



     </RelativeLayout>

</RelativeLayout>