<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/apptheme_color"
        android:paddingBottom="@dimen/sh_dialog_padding"
        android:paddingTop="@dimen/sh_dialog_padding"
        android:paddingRight="@dimen/sh_dialog_padding"
        android:paddingLeft="@dimen/sh_dialog_padding"
        android:visibility="gone">

        <ImageView
            android:id="@+id/dialog_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_action_grid"
            android:layout_marginRight="@dimen/sh_dialog_padding"
            android:visibility="gone"/>
        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:typeface="roboto_condensed_regular"
            tools:text="No Connectivity"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dialog_icon"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sh_text_medium"
            android:singleLine="true"/>
     </RelativeLayout>
    <View
        android:id="@+id/title_body_separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/blue_color_scheme_4"
        android:visibility="gone"/>


    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/sh_dialog_padding"
        android:paddingLeft="@dimen/sh_dialog_padding"
        tools:text="This is the message of the dialog"
        app:typeface="roboto_condensed_regular"
        android:textSize="@dimen/sh_text_medium"
        android:paddingBottom="@dimen/sh_dialog_padding"
        android:paddingTop="@dimen/sh_dialog_padding"/>

</LinearLayout>