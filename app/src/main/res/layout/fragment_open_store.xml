<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:ignore="HardCodedText"
    tools:context="com.store.hive.store_owner.OpenStoreActivity$PlaceholderFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Give your store a name a description"
            android:gravity="center"
            android:layout_above="@+id/input_layout"
            android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/storeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Store Name"
            android:singleLine="true"
            android:inputType="textCapSentences"/>

        <EditText
            android:id="@+id/storeDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:lines="2"
            android:layout_marginTop="20dp"
            android:inputType="textCapSentences"/>

        <Button
            android:id="@+id/btnRegisterStore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sh_register"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

</RelativeLayout>
